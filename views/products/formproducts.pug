extends ../layout

block content
    if errors
        for error in errors
            <div class="mt-1 alert alert-danger alert-dismissible fade show" role="alert">
                strong= error.msg
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    div(class='card mt-2 bg-light')
        div(class='card-header text-center')
            h1= title
        div(class='card-body')
            form(method='POST' action='')
                div(class='form-group')
                    label(for='name') Name
                    input(type='text' class='form-control' id='name' name='name' placeholder='Name of product' autocomplete='off' value=(undefined===product ? '' : product.name))
                div(class='form-group')
                    label(for='description') Description
                    input(type='text' class='form-control' id='description' name='description' placeholder='Description of product' autocomplete='off' value=(undefined===product ? '' : product.description))
                div(class='form-group')
                    label(for='price') Price
                    div(class='input-group')
                        span(class='input-group-text') $
                        input(type='number' class='form-control' id='price' name='price' placeholder='Price of product' autocomplete='off' value=(undefined===product ? '' : product.price))
                        span(class='input-group-text') .00
                div(class='form-group')
                    label(for='quantity') Quantity
                    input(type='number' class='form-control' id='quantity' name='quantity' placeholder='Quantity of product' autocomplete='off' value=(undefined===product ? '' : product.quantity))        
                div(class='form-group')
                    label(for='category') Category 
                    div(class='form-control')
                        for category in categories
                            div(class='form-check form-check-inline')
                                input(type='checkbox' name='category' id=category._id value=category._id checked=category.checked)
                                label(for=category._id) #{category.name}
                div(class='form-group')
                    label(for='img') Image
                    input(type='file' class='form-control' id='img' name='img' placeholder='Upload image' accept='.jpg, .jpeg, .png')
                div(class='d-grid gap-2')
                    button(class='btn btn-success mt-2' type='submit') Register
